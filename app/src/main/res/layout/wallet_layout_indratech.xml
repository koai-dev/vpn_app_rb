                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font1"
                            android:gravity="center"
                            android:textColor="@color/lightGray"
                            android:textSize="19dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
