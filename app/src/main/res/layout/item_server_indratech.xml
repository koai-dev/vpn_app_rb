<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CustomCard.Transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="18dp"
        android:paddingVertical="12dp">

        <ImageView
            android:id="@+id/itemBanner"
            android:layout_width="42dp"
            android:layout_height="42dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/itemServerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/itemServerName"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/itemBanner"
            android:text="Japan"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/itemCheckIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:button="@null"
            android:clickable="false"
            android:drawableStart="@drawable/button_radio_server" />

        <ImageView
            android:id="@+id/itemPaidChecker"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            android:layout_toStartOf="@id/itemCheckIndicator"
            android:src="@drawable/ic_crown"
            android:visibility="gone"
            app:tint="@color/colorPrimary" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>